@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<style>
    .imgcentr {
        display: flex;
        align-items: center;
        flex-direction: column;
    }

    img {
        height: auto;
        width: auto;
        display: flex;
        max-width: 250px;
        max-height: 220px;
        flex-grow: 3;
    }

    body {
        background-color: green;
        padding: 0px;
        border: 0px;
        margin: 0px;
    }

    .products {
        display: flex;
        text-align: center;
        min-height: 100px;
        flex-wrap: wrap;
    }

    .product {
        background-color: yellow;
        box-sizing: border-box;
        display: flex;
        margin: 7px;
        min-height: 250px;
        min-width: 250px;
        flex-direction: column;
    }

    .lab {
        display: flex;
        flex-grow: 10;
    }

    .coins {
        display: flex;
    }

    .coin {
        margin: 7px;
    }
    .inp{
        height: 80px;
        width: 80px;
       font-size: 20pt;


    }

    .array{
        display: flex;
        margin-top: 250px;
        flex-direction : row;
    }
    .number{
         background-color: yellow;
         border: 8px solid #E81E25;
         text-align:center;
         position: absolute;
        box-sizing: border-box;
        display: flex;
        margin: 20px;
        max-height: 100px;
        max-width: 100px;

    }
    .korzina {
        display: flex;
        margin-left: 8px;
        width: auto;
        flex-direction: column;
    }

    .panelcoins {
        display: flex;
        width: auto;
        margin-left: 8px;
        flex-direction: column;
    }
    
    .labelsort{
        color: red;
        font-size: 28px;
    }
    .labelsort2{
        color: black;
        font-size: 28px;
    }
    .bbutton {
        color: blue;
        background-color: red;
        font-size: 16px;
        text-align: center;
        padding: 12px 28px;
        border-radius: 8px;
    }

    .addbtn {
        color: blue;
        background-color: red;
        font-size: 13px;
        text-align: center;
        padding: 9px 12px;
        margin: auto;
    }

    .main {
        display: flex;
        flex-direction: column;
    }

    .error {
        font-size: 30px;
        color: red;
    }

    .mainpanel {
        display: flex;
        align-items: center;
        flex-direction: column;
    }
    
    .caschoins {
        display: flex;
    }

    .cash {
        display: flex;
        flex-direction: column;
    }

    .label {
        display: flex;
        align-items: center;
    }
</style>
<body id="content">



    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react/16.11.0/umd/react.development.js"></script>
    <script crossorigin src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.11.0/umd/react-dom.development.js"></script>
    <script src="~/js/Add.jsx"></script>


</body>